%% -*- erlang -*-
{application, socketio,
 [{description, "socketio"},
  {vsn, "0.1"},
  {modules, []},
  {registered, []},
  {mod, {'socketio_app', []}},
  {env, [{heartbeat_interval, 20},
  		 {heartbeat_timeout, 60},
         {close_timeout, 60},
         {allow_transports, "htmlfile,xhr-polling,jsonp-polling"},
         {flash_policy_server, true}]},
  {applications, [kernel, stdlib, crypto]}]}.
